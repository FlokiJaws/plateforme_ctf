# ============================================
# VARIABLES D'ENVIRONNEMENT
# ============================================
# Copier ce fichier en .env pour le développement local

# ============================================
# BASE DE DONNÉES POSTGRESQL
# ============================================
POSTGRES_DB=ctfdb
POSTGRES_USER=ctfuser
POSTGRES_PASSWORD=ctfpassword

# URL JDBC pour Quarkus
QUARKUS_DATASOURCE_DB_KIND=postgresql
QUARKUS_DATASOURCE_JDBC_URL=jdbc:postgresql://localhost:5432/ctfdb
QUARKUS_DATASOURCE_USERNAME=ctfuser
QUARKUS_DATASOURCE_PASSWORD=ctfpassword

# ============================================
# HIBERNATE
# ============================================
QUARKUS_HIBERNATE_ORM_DATABASE_GENERATION=update

# ============================================
# APPLICATION
# ============================================
QUARKUS_HTTP_PORT=8080
QUARKUS_HTTP_CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# ============================================
# FRONTEND (React + Vite)
# ============================================
# URL de l'API backend (utilisé pendant le build)
VITE_API_URL=/api

# ============================================
# PGADMIN (optionnel)
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@ctf.local
PGADMIN_DEFAULT_PASSWORD=admin
